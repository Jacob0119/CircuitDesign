<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="?attr/colorPrimary"
   >
<TextView
    android:id="@+id/app_title"
    android:textSize="90dp"
    android:textColor="#ffffff"
    android:gravity="center"
    android:text="Circuit\nDesign"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<LinearLayout
    android:layout_margin="10dp"
    android:layout_below="@id/app_title"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">



    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        >


<LinearLayout

    android:padding="@dimen/grid_padding"
    android:layout_column="0"
    android:layout_row="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"

            android:src="@drawable/circuit2"
            android:layout_width="@dimen/grid_size"
            android:layout_height="@dimen/grid_size"
            android:text="NEW"
            android:id="@+id/make"

            android:onClick="mOnClick"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New circuit"
        android:textColor="@color/menutext"/>
</LinearLayout>
    <LinearLayout
        android:padding="@dimen/grid_padding"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:src="@drawable/load_icon"
        android:layout_width="@dimen/grid_size"
        android:layout_height="@dimen/grid_size"
        android:text="LOAD"
        android:id="@+id/load"

        android:onClick="mOnClick"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD"
        android:textColor="@color/menutext"/>
</LinearLayout>
    <LinearLayout
        android:padding="@dimen/grid_padding"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:src="@drawable/help_icon"
        android:layout_width="@dimen/grid_size"
        android:layout_height="@dimen/grid_size"
        android:text="HELP"
        android:id="@+id/help"

        android:onClick="mOnClick"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:textColor="@color/menutext"/>
</LinearLayout>
        <LinearLayout
            android:padding="@dimen/grid_padding"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:src="@drawable/close_red"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="@dimen/grid_size"
        android:layout_height="@dimen/grid_size"
        android:text="EXIT"
        android:id="@+id/exit"

        android:onClick="mOnClick"/>
<TextView
android:layout_gravity="center"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="EXIT"
android:textColor="@color/menutext"/>
    </LinearLayout>
    </GridLayout>
</LinearLayout>
</RelativeLayout>